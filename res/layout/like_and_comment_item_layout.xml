<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="62dp"
    android:orientation="horizontal"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/picture"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/picture"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:layout_marginLeft="7dp">
        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#575757"
            android:text="昵称"
            android:layout_marginTop="13dp"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#bebebe"
            android:text="时间"
            android:layout_marginBottom="13dp"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/like_or_comment"
        android:layout_width="21dp"
        android:layout_height="18dp"
        android:layout_marginLeft="17dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/button_like"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <FrameLayout
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="13dp">
        <TextView
            android:id="@+id/state_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="9sp"
            android:textColor="#575757"
            android:text="发布内容发布内容发布内容发布内容发布内容"/>
        <ImageView
            android:id="@+id/state_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>
