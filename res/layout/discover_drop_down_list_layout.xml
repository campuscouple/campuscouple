<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="118dp" android:layout_height="124dp"
    android:orientation="vertical"
    android:background="@drawable/drop_down_list">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">
        <ImageView
            android:layout_width="11dp"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="#ffffff"
            android:text="按范围查看"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_line"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_the_whole_school"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="9dp"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="全校"
        android:background="@drawable/discover_selected"/>
    <TextView
        android:id="@+id/btn_who_i_followed"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="9dp"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="我关注的"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">
        <ImageView
            android:layout_width="11dp"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="7sp"
            android:textColor="#ffffff"
            android:text="按性别查看"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_line"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_all_gender"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="9dp"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="全部"
        android:background="@drawable/discover_selected"/>
    <TextView
        android:id="@+id/btn_male"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="9dp"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="男"/>
    <TextView
        android:id="@+id/btn_female"
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingLeft="9dp"
        android:textSize="11sp"
        android:textColor="#ffffff"
        android:text="女"/>
</LinearLayout>
