<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp">
        <ImageButton
            android:id="@+id/btn_contacts"
            android:layout_width="23dp"
            android:layout_height="19dp"
            android:background="@drawable/button_contacts"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="13dp"
            />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/discover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="#575757"
            android:text="发现"
            android:layout_marginLeft="49dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/discover_updown"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/discover_down"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/btn_chat"
            android:layout_width="24dp"
            android:layout_height="19dp"
            android:background="@drawable/button_chat"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="15dp"/>
        <ImageButton
            android:id="@+id/btn_new_state"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:background="@drawable/button_new_state"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1dp"
        android:divider="#bebebe">
    </ListView>
</LinearLayout>
